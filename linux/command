#!/bin/bash

# ========== 1. File and Directory ==========
echo "Current Directory: $(pwd)"
mkdir sample_dir && cd sample_dir
touch file1.txt file2.txt
ls -l
cp file1.txt copy_file1.txt
mv copy_file1.txt moved_file.txt
rm moved_file.txt
cd .. && rm -r sample_dir

# ========== 2. File Viewing ==========
echo "Hello World" > file.txt
cat file.txt
head -n 1 file.txt
tail -n 1 file.txt
rm file.txt

# ========== 3. Permissions ==========
touch script.sh
chmod +x script.sh
ls -l script.sh
rm script.sh

# ========== 4. System Info ==========
echo "System Info:"
uname -a
df -h
free -m
uptime
whoami
hostname

# ========== 5. Process Management ==========
echo "Listing top 5 processes:"
ps aux | head -n 5

# ========== 6. Networking ==========
ping -c 2 google.com
ip a

# ========== 7. Package Management (Debian/Ubuntu) ==========
echo "Updating system..."
sudo apt update
# sudo apt install package_name

# ========== 8. Variables and Arithmetic ==========
a=5
b=10
sum=$((a + b))
echo "Sum of $a and $b is $sum"

# ========== 9. Conditionals ==========
if [ $a -lt $b ]; then
  echo "$a is less than $b"
else
  echo "$a is not less than $b"
fi

# ========== 10. Loops ==========
echo "For loop:"
for i in {1..3}; do echo "Count $i"; done

echo "While loop:"
count=1
while [ $count -le 3 ]; do
  echo "While $count"
  count=$((count + 1))
done

# ========== 11. Functions ==========
greet() {
  echo "Hello, $1"
}
greet "Sumit"

# ========== 12. Compression ==========
mkdir mydata && echo "sample" > mydata/a.txt
tar -cvf mydata.tar mydata/
tar -xvf mydata.tar
rm -r mydata mydata.tar

# ========== 13. Cron Job Example ==========
echo "Run 'crontab -e' to edit cron jobs"

# ========== 14. Logs ==========
echo "Last 5 syslog lines:"
sudo tail -n 5 /var/log/syslog 2>/dev/null

# ========== 15. User Management ==========
# echo "Add user: sudo adduser newuser"
# echo "Add user to sudo: sudo usermod -aG sudo newuser"
